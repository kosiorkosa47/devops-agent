{
  "dashboard": {
    "title": "SLO/SLI Dashboard - 99.9% Availability Target",
    "tags": ["slo", "sli", "reliability"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Current Availability (30-day rolling)",
        "type": "stat",
        "gridPos": {"x": 0, "y": 0, "w": 6, "h": 6},
        "targets": [
          {
            "expr": "sli:availability:ratio_rate30m"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 0.999, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Error Budget Remaining",
        "type": "gauge",
        "gridPos": {"x": 6, "y": 0, "w": 6, "h": 6},
        "targets": [
          {
            "expr": "slo:error_budget:remaining_ratio"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "min": 0,
            "max": 1,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 0.1, "color": "yellow"},
                {"value": 0.5, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Error Budget Burn Rate",
        "type": "stat",
        "gridPos": {"x": 12, "y": 0, "w": 6, "h": 6},
        "targets": [
          {
            "expr": "slo:error_budget:burn_rate_1h"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "decimals": 2,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 1, "color": "yellow"},
                {"value": 14.4, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "P95 Latency (5min)",
        "type": "stat",
        "gridPos": {"x": 18, "y": 0, "w": 6, "h": 6},
        "targets": [
          {
            "expr": "sli:latency:p95_5m"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 0.5, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "Availability Trend (7 days)",
        "type": "timeseries",
        "gridPos": {"x": 0, "y": 6, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sli:availability:ratio_rate30m",
            "legendFormat": "30-day availability"
          },
          {
            "expr": "0.999",
            "legendFormat": "SLO Target (99.9%)"
          }
        ]
      },
      {
        "id": 6,
        "title": "Latency Distribution (7 days)",
        "type": "timeseries",
        "gridPos": {"x": 12, "y": 6, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sli:latency:p95_5m",
            "legendFormat": "P95"
          },
          {
            "expr": "sli:latency:p99_5m",
            "legendFormat": "P99"
          },
          {
            "expr": "0.5",
            "legendFormat": "SLO Target (500ms)"
          }
        ]
      },
      {
        "id": 7,
        "title": "Error Budget Consumption",
        "type": "timeseries",
        "gridPos": {"x": 0, "y": 14, "w": 24, "h": 8},
        "targets": [
          {
            "expr": "1 - slo:error_budget:remaining_ratio",
            "legendFormat": "Budget Used"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit"
          }
        }
      },
      {
        "id": 8,
        "title": "SLO Incidents (Last 30 days)",
        "type": "table",
        "gridPos": {"x": 0, "y": 22, "w": 24, "h": 8},
        "targets": [
          {
            "expr": "ALERTS{alertname=~'.*SLO.*', alertstate='firing'}",
            "format": "table"
          }
        ]
      }
    ],
    "refresh": "30s",
    "time": {
      "from": "now-7d",
      "to": "now"
    },
    "annotations": {
      "list": [
        {
          "name": "Deploys",
          "datasource": "Prometheus",
          "expr": "changes(kube_deployment_status_replicas[1m]) > 0",
          "iconColor": "blue",
          "tagKeys": "deployment"
        },
        {
          "name": "SLO Violations",
          "datasource": "Prometheus",
          "expr": "ALERTS{alertname=~'.*SLO.*', alertstate='firing'}",
          "iconColor": "red"
        }
      ]
    }
  }
}
